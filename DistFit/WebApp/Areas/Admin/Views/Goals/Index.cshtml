@model IEnumerable<App.Public.DTO.v1.Goal>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValueUnit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReachedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeasurementType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValueUnit!.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReachedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppUser!.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeasurementType!.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExerciseType!.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
